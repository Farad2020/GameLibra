@model IEnumerable<GameLibra.Models.Library>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="library-details-banner d-flex px-4 py-5 align-items-center justify-content-between" style="background-position-y: 20%;">
    <div>
        <h4 class="banner-brand ">
            Your Libraries
        </h4>
    </div>
    <a class="btn btn-purple float-right" href="~/Libraries/Create">Create Library</a>
</div>
<hr style="height:2px;border:none;color:#333;background-color:none;" />

<table class="table table-striped text-white">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Creation_date)
        </th>
        <th style="width: 10%;"></th>
        <th style="width: 10%;"></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Creation_date)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-sm btn-outline-light" })
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }, new { @class = "btn btn-sm btn-outline-danger" })
        </td>
    </tr>
}

</table>
